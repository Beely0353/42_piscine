RED		=	\033[31m
GRE		=	\033[32m
BLU		=	\033[34m
YEL		=	\033[33m
EOC		=	\033[0m

NAME = libft.a

SRCS = $(addprefix srcs/, ft_putchar.c ft_putstr.c ft_strcmp.c ft_strlen.c ft_swap.c)

OBJS = $(SRCS:.c=.o)

CC = gcc
CFLAGS = -Wall -Wextra -Werror

.c.o:
	@${CC} ${CFLAGS} -c -I includes $< -o ${<:.c=.o} 
	@printf "\r\033[Kâ³ Compilation de ""$(YEL)${notdir $<}$(EOC). â³"

${NAME}: ${OBJS}
	@ar rc ${NAME} ${OBJS}
	@ranlib ${NAME}
	@echo "\nâœ… $(GRE)Compilation terminÃ©e.$(EOC) âœ…"

all: ${NAME}
	@clear

clean:
	@echo "ðŸ—‘  $(RED)Supression des fichiers binaires (.o).$(EOC) ðŸ—‘"
	@rm -f ${OBJS}

fclean: clean
	@echo "ðŸ—‘  $(RED)Supression des executables et librairies.$(EOC) ðŸ—‘"
	@rm -f ${NAME}

re: fclean all

.PHONY: all clean fclean re
